<section class="page">
    <header>
        <h1>{{labels.blog.title}}</h1>
        {{#pagination}}
        <p>Page <strong>{{page}}</strong> of <strong>{{total}}</strong></p>
        {{/pagination}}
    </header>
    {{> blog-post-list}}
    <p class="pagination">
        {{#pagination}}
            {{#prev}}
            <a href="/blog/page/{{.}}.html">Newer posts</a>
            {{/prev}}
            {{#next}}
            <a href="/blog/page/{{.}}.html">Older posts</a>
            {{/next}}
        {{/pagination}}
    </p>
</section>